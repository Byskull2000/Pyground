# Configuración de la aplicación
PORT=5000
NODE_ENV=development

# Base de datos PostgreSQL para Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pyground"

# JWT y sesiones
JWT_SECRET=tu-jwt-secret-super-seguro
SESSION_SECRET=tu-session-secret

# OAuth (opcional, solo si usas Google Login)
GOOGLE_CLIENT_ID=tu-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-google-client-secret

# Cliente frontend
CLIENT_URL=http://localhost:3000
